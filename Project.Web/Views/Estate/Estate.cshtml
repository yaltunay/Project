@model EstateModel
@{
    ViewData["Title"] = "Yeni Emlak Türü Ekle";
}

<h2>Yeni Emlak Ekle</h2>

<form method="post" action="CreateEstate">
    <div class="form-group">
        <label for="Name" class="form-label">Adı:</label>
        <input type="text" id="Name" name="Name" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="Square" class="form-label">Alanı:</label>
        <input type="number" id="Square" name="Square" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="RoomCount" class="form-label">Oda Sayısı:</label>
        <input type="number" id="RoomCount" name="RoomCount" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="FloorCount" class="form-label">Kat Sayısı:</label>
        <input type="number" id="FloorCount" name="FloorCount" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="Floor" class="form-label">Kat:</label>
        <input type="number" id="Floor" name="Floor" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="EstateTypeId" class="form-label">Emlak Tipi:</label>
        <select id="EstateTypeId" name="EstateTypeId" class="form-control" required>
            @foreach (var estateType in ViewBag.EstateTypes)
            {
                <option value="@estateType.Id">@estateType.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="CustomerId" class="form-label">Müşteri:</label>
        <select id="CustomerId" name="CustomerId" class="form-control" required>
            @foreach (var customer in ViewBag.Customers)
            {
                <option value="@customer.Id">@($"{customer.Name} {customer.Surname}") </option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-1">Kaydet</button>
</form>